<h1><%= @event.name.split("-").first %> - <%= @event.date.strftime('%m/%d/%Y') %> - <%= @event.users.count %> Attendees</h1>
<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <tr>
      <th>
        Attendees
      </th>
      <th>
        Email
      </th>
      <th>
        Interest
      </th>
    </tr>
    <% @event.users.order(:interest).each do |user| %>
      <tr>
        <td>
          <%= link_to user.name.titleize, user %><% if user.events.count == 1 %><div class="red_font"> <b><%= "- First Timer -" %></b></div> <% end %>
        </td>
        <td>
          <%= mail_to user.email %>
        </td>
        <td>
          <%= user.interest %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to "Export to CSV", {:format => :csv } %>
<br>
<br>
<td> <%= link_to "Edit Event", edit_event_path(@event) %> </td>
