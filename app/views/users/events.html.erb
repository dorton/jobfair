<h1><%= @events.count %> Events</h1>

<% @events.each do |event| %>
  <h2><%= link_to event.name.split("-").first, event %> - <%= event.date.strftime('%m/%d/%Y') %> - <%= event.users.count %> Attendees</h2>
  <table class="table table-striped table-hover table-condensed">
    <tr>
      <th>
        Name
      </th>
      <th>
        Email
      </th>
      <th>
        Interest
      </th>
    </tr>
    <% event.users.each do |user| %>
      <tr>
        <td>
          <%= link_to user.name.titleize, user %>
        </td>
        <td>
          <%= mail_to user.email %>
        </td>
        <td>
          <%= user.interest %>
        </td>
      </tr>
    <% end %>
  </table>


<% end %>
