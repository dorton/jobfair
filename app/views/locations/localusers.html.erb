<h1>Latest Event Goers in <%= @location.city %>:</h1>
<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">


    <tr>
      <th>
        Name
      </th>
      <th>
        Email
      </th>
      <th>
        Events
      </th>
      <th>
        Interest
      </th>
      <th>Campus</th>
    </tr>


  <% @lastusers.each do |user| %>
    <tr>
      <td>
        <%= link_to user.name.titleize, user %>
      </td>
      <td>
        <%= mail_to user.email %>
      </td>
      <td>
      <% user.events.all.each do |event| %>
        <%= link_to event.name, event_path(event) %><br>
      <% end %>
    </td>

      <td>
        <%= user.interest %>
      </td>
      <td>
        <% user.locations.each do |location| %>
          <%= location.city %> <br>
        <% end %>

      </td>
    </tr>
  <% end %>
  </table>
</div>
